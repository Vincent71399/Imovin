<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="LoginTitleStyle">
        <item name="android:textSize">@dimen/loginPageTextSize</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/LoginComponentMarginTop</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginInputStyle">
        <item name="android:textSize">@dimen/loginPageTextSize</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/LoginComponentMarginTop</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">@dimen/loginPageBtnTextSize</item>
        <item name="android:layout_marginTop">@dimen/LoginComponentMarginTop</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background_color</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyleNoSpace">
        <item name="android:textSize">@dimen/loginPageBtnTextSize</item>
        <item name="android:layout_marginTop">@dimen/LoginComponentMarginTop</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background_color_square</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyleNoSpaceNoMargin">
        <item name="android:textSize">@dimen/loginPageBtnTextSize</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background_color_square</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="clickableTitleStyle">
        <item name="android:textSize">@dimen/loginPageBtnTextSize</item>
        <item name="android:textColor">@drawable/click_text_color</item>
        <item name="android:layout_marginTop">@dimen/LoginComponentMarginTop</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinkContainerStyle">
        <item name="android:weightSum">100</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/libraryLinkPadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinkHeaderStyle">
        <item name="android:textSize">@dimen/libraryLinkBigTextSize</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingEnd">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingTop">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:paddingBottom">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinkInfoStyle">
        <item name="android:textSize">@dimen/libraryLinkMidTextSize</item>
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingEnd">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingTop">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:paddingBottom">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinkSubtitleStyle">
        <item name="android:textSize">@dimen/libraryLinkMidTextSize</item>
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/libraryLinkTextPaddingBigH</item>
        <item name="android:paddingEnd">@dimen/libraryLinkTextPaddingBigH</item>
        <item name="android:paddingTop">@dimen/libraryLinkTextPaddingBigV</item>
        <item name="android:paddingBottom">@dimen/libraryLinkTextPaddingBigV</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LinkHeaderMinorStyle">
        <item name="android:textSize">@dimen/libraryLinkMidTextSize</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingEnd">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingTop">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:paddingBottom">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="LinkInfoMinorStyle">
        <item name="android:textSize">@dimen/libraryLinkSmallTextSize</item>
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingEnd">@dimen/libraryLinkTextPaddingSmallH</item>
        <item name="android:paddingTop">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:paddingBottom">@dimen/libraryLinkTextPaddingSmallV</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="LinkSubtitleMinorStyle">
        <item name="android:textSize">@dimen/libraryLinkSmallTextSize</item>
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/libraryLinkTextPaddingBigH</item>
        <item name="android:paddingEnd">@dimen/libraryLinkTextPaddingBigH</item>
        <item name="android:paddingTop">@dimen/libraryLinkTextPaddingBigV</item>
        <item name="android:paddingBottom">@dimen/libraryLinkTextPaddingBigV</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CF_bold_title_big">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CF_title_big">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CF_bold_title">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CF_bold_content">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CF_content">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="QS_content">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="questionnaire_container">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="questionnaire_container2">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="questionnaire_text">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="message_tab_unselect">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_background_not_selected</item>
    </style>

    <style name="message_tab_select">
        <item name="android:textColor">@color/theme_purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_background_selected</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
