<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/medalImagePadding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/medal_img"
        android:src="@drawable/icon_star_gold"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_marginTop="@dimen/medalTextMarginTop"
        android:text="@string/earned"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textSubSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/earned_count"
        android:layout_marginTop="@dimen/medalTextMarginTop"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textSubSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>