<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForumCommentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/theme_purple"
            android:text="debauer"/>
        <TextView
            android:id="@+id/post_since"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lesser_grey_color"
            android:text="1d"
            android:textAlignment="textEnd"/>
    </LinearLayout>
    <TextView
        android:id="@+id/feedContentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check out my brand new rig!"/>
    <ImageView
        android:id="@+id/feedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Feed Image"/>

    <TextView
        android:text="@string/comments_topics"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/light_grey_color"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>