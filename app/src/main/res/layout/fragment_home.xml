<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.imovin.Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/steps_value"
            android:text="0"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textBig"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/steps"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubBig"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cal_value"
                    android:text="0"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/textMid"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/cal"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/textSubMid"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time_value"
                    android:text="0"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/textMid"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/min"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/textSubMid"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/distance_value"
                    android:text="0"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/textMid"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/kilometer"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/textSubMid"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/warning"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="@string/warning_text"
            android:background="@drawable/wheat_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_by_day"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/daily_goal"
            android:text="@string/daily_goal_text"
            android:textColor="@color/black_color"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/steps_btn"
                android:padding="10dp"
                android:text="@string/steps"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:background="@drawable/purple_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/calories_btn"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:text="@string/calories"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:background="@drawable/grey_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/duration_btn"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:text="@string/duration"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:background="@drawable/grey_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/distance_btn"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:text="@string/distance"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:background="@drawable/grey_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
