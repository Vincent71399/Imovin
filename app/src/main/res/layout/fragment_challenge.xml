<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ChallengeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/challenge_season_text"
            android:layout_marginTop="@dimen/challengeSubMarginTop"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/textSubBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/challenge_season_end_date"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/challengeSubMarginTop"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/challengePadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/points_title"
                android:text="@string/total_points"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textSubBig"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/points_number"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/textSubBig"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/rank_text"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/daily_steps_title"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/daily_step_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/active_days_for_the_week_title"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/active_days_for_the_week_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/daily_total_distance_title"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/daily_total_distance_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/weekly_exercise_duration_title"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/weekly_exercise_duration_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/total_days_with_steps_title"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/total_days_with_steps_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/active_weeks_in_a_row_title"
            android:layout_marginTop="@dimen/challengeMarginTop"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/active_weeks_in_a_row_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </ScrollView>

</android.support.v4.widget.NestedScrollView>