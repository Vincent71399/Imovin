<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="#88222222"
    android:gravity="center"
    android:id="@+id/mainView"
    tools:context=".Activities.MonitorDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/rounded_corner_bg">

        <TextView
            android:id="@+id/date_display"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/steps_value"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/textMid"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/steps"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/plan_steps_bar"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/theme_purple"/>

        <TextView
            android:id="@+id/steps_left"
            android:text="@string/steps"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/button_close"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/close"
            android:textSize="18sp"
            android:textColor="@color/blue_color"/>

    </LinearLayout>

</RelativeLayout>