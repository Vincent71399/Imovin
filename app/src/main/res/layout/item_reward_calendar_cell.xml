<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/minorSpace"
    android:paddingBottom="@dimen/minorSpace"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/calendarProgressSize"
        android:layout_height="@dimen/calendarProgressSize"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_solid_bar"
        android:background="@drawable/circle_shape_solid"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/date"
        android:gravity="center"
        android:textSize="@dimen/calendarTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>

