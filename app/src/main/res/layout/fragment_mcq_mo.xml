<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.imovin2.Fragments.MCQFragment">

    <LinearLayout
        style="@style/questionnaire_container">

        <TextView
            android:id="@+id/question"
            style="@style/questionnaire_text" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/question_checklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/other"
                android:textSize="@dimen/textSubSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/other_input"
                android:singleLine="true"
                android:layout_width="@dimen/mcqInputHeight"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>