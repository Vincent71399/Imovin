<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/link_container"
    style="@style/LinkContainerStyle">

    <LinearLayout
        android:gravity="top|start"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/link_header"
            style="@style/LinkHeaderStyle" />

        <TextView
            android:id="@+id/link_subtitle"
            style="@style/LinkInfoStyle" />

        <TextView
            android:id="@+id/link_info"
            style="@style/LinkInfoStyle" />

    </LinearLayout>

    <ImageView
        android:id="@+id/link_pic"
        android:layout_width="0dp"
        android:layout_weight="60"
        android:layout_height="wrap_content"
        style="@style/LinkPicStyle"/>

</LinearLayout>