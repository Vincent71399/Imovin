<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="5">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical|start"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_text"
                android:textSize="20sp"
                android:textColor="@color/black_color"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"/>

        </LinearLayout>

        <TextView
            android:id="@+id/owner_text"
            android:textSize="18sp"
            android:textColor="@color/theme_purple"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:weightSum="5">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical|start"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/icon_speech_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/comment_count"
                android:textSize="18sp"
                android:textColor="@color/black_color"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"/>

        </LinearLayout>

        <TextView
            android:id="@+id/post_time"
            android:textSize="18sp"
            android:textColor="@color/lesser_grey_color"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thumbs_up_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/thumbs_up_image"
            android:src="@drawable/icon_thumb_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/likes_text"
            android:textSize="18sp"
            android:textColor="@color/black_color"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/grey_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>