<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/poster_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="@dimen/postPadding"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/postTextSizeBig"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical|end"
            android:padding="@dimen/postPadding"
            android:textColor="@color/lesser_grey_color"
            android:textSize="@dimen/postTextSizeSmall" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/comment_text"
            android:textSize="@dimen/postTextSizeSmall"
            android:padding="@dimen/postPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/postPadding"
        android:weightSum="6">

        <LinearLayout
            android:id="@+id/thumbs_up_container"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:padding="@dimen/postPadding">

            <ImageView
                android:id="@+id/thumbs_up_image"
                android:src="@drawable/icon_thumb_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/likes_text"
                android:textSize="@dimen/postTextSizeSmall"
                android:textColor="@color/black_color"
                android:padding="@dimen/postPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_container"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/postPadding">

            <ImageView
                android:src="@drawable/icon_pen_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_container"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/postPadding">

            <ImageView
                android:src="@drawable/icon_cross_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/grey_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>