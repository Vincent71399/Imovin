<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.imovin.Fragments.MCQFragment">

    <LinearLayout
        style="@style/questionnaire_container2">

        <TextView
            android:id="@+id/question"
            style="@style/questionnaire_text" />

        <TextView
            android:id="@+id/value"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/textMid"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/unit"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSubMid"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/planStepsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_progress="5000"
            app:isb_max="20000"
            app:isb_min="2000"
            app:isb_thumb_color="@color/theme_purple"
            app:isb_track_progress_color="@color/theme_purple"
            app:isb_indicator_color="@color/theme_purple"
            app:isb_tick_marks_size="3dp"
            app:isb_ticks_count="37"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


    </LinearLayout>

</FrameLayout>